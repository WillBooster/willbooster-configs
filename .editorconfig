root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,dart,js,json,jsx,pu,puml,rb,ts,tsx,vue,yaml,yml}]
indent_size = 2
indent_style = space

[*.{gradle}]
indent_size = 4
indent_style = space

[*.{md}]
max_line_length = off
trim_trailing_whitespace = false
