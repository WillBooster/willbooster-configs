{
  "name": "@willbooster/renovate-config",
  "version": "0.0.0-semantically-released",
  "description": "A renovate config for WillBooster projects",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "files": [],
  "scripts": {
    "cleanup": "yarn format",
    "format": "sort-package-json && yarn prettify",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\""
  },
  "prettier": "@willbooster/prettier-config",
  "devDependencies": {
    "@willbooster/prettier-config": "^9.0.1",
    "lint-staged": "13.0.4",
    "prettier": "2.8.0",
    "sort-package-json": "2.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":automergeMinor",
        ":automergePr",
        ":maintainLockFilesWeekly",
        ":prImmediately",
        ":rebaseStalePrs",
        ":semanticCommits",
        "group:linters",
        "group:test",
        "group:allNonMajor"
      ],
      "dependencyDashboardAutoclose": true,
      "packageRules": [
        {
          "groupName": "willbooster-config",
          "packagePatterns": [
            "^@willbooster/.*config"
          ]
        },
        {
          "matchPackagePatterns": [
            "yarn"
          ],
          "ignoreUnstable": false
        },
        {
          "packageNames": [
            "chalk"
          ],
          "enabled": false
        },
        {
          "matchDatasources": [
            "docker"
          ],
          "matchPackageNames": [
            "node"
          ],
          "allowedVersions": "^16 || ^18 || ^20"
        }
      ],
      "schedule": [
        "before 10am on Saturday"
      ],
      "timezone": "Asia/Tokyo"
    }
  }
}
