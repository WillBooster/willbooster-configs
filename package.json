{
  "name": "willbooster-configs",
  "private": true,
  "license": "Apache-2.0",
  "author": "WillBooster LLC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn lerna bootstrap --use-workspaces",
    "prettier": "prettier --write **/*.{css,html,js,json,md,scss,yml}",
    "sort-all-package-json": "yarn sort-package-json && yarn lerna run sort-package-json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "1.3.1",
    "lerna": "3.13.3",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "sort-package-json": "1.22.1"
  }
}
