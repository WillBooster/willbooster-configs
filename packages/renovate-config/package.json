{
  "name": "@willbooster/renovate-config",
  "version": "4.0.0",
  "private": false,
  "description": "A renovate config for WillBooster projects",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "scripts": {
    "cleanup": "yarn format",
    "format": "sort-package-json && yarn prettier",
    "prettier": "prettier --write \"**/{.*/,}*.{css,htm,html,js,json,jsx,md,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\" --color",
    "test": "jest"
  },
  "prettier": "@willbooster/prettier-config",
  "gitHead": "865a18e97886b4051f555430f8fc0c89bd364001",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":automergeBranch",
        ":automergeMinor",
        ":maintainLockFilesWeekly",
        ":rebaseStalePrs",
        ":semanticCommits",
        "group:allNonMajor",
        "group:linters",
        "group:monorepos",
        "group:test",
        "schedule:weekly"
      ],
      "timezone": "Asia/Tokyo",
      "packageRules": [
        {
          "groupName": "willbooster-config",
          "packagePatterns": [
            "^@willbooster/.*config"
          ]
        }
      ]
    }
  }
}
