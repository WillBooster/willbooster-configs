{
  "name": "@willbooster/renovate-config",
  "version": "8.0.0",
  "description": "A renovate config for WillBooster projects",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "scripts": {
    "cleanup": "yarn format",
    "format": "sort-package-json && yarn prettify",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\""
  },
  "prettier": "@willbooster/prettier-config",
  "devDependencies": {
    "@willbooster/prettier-config": "workspace:*",
    "lint-staged": "12.3.5",
    "prettier": "2.5.1",
    "sort-package-json": "1.54.0"
  },
  "gitHead": "865a18e97886b4051f555430f8fc0c89bd364001",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":automergeMinor",
        ":automergePr",
        ":maintainLockFilesWeekly",
        ":prImmediately",
        ":rebaseStalePrs",
        ":semanticCommits",
        "group:linters",
        "group:test",
        "group:allNonMajor"
      ],
      "constraints": {
        "node": "< 17.0.0"
      },
      "dependencyDashboardAutoclose": true,
      "packageRules": [
        {
          "groupName": "willbooster-config",
          "packagePatterns": [
            "^@willbooster/.*config"
          ]
        },
        {
          "matchPackagePatterns": [
            "yarn"
          ],
          "ignoreUnstable": false
        },
        {
          "packageNames": [
            "chalk"
          ],
          "enabled": false
        }
      ],
      "schedule": [
        "before 10am on Saturday"
      ],
      "timezone": "Asia/Tokyo"
    }
  }
}
