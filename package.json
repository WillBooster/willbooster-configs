{
  "name": "@willbooster/configs",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/WillBooster/willbooster-configs.git"
  },
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "cleanup": "yarn format",
    "format": "yarn sort-package-json && yarn prettier",
    "prettier": "prettier --write \"**/{.*/,}*.{css,htm,html,js,json,jsx,md,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "publish-all": "dotenv -- yarn publish-all-innner",
    "publish-all-innner": "npm whoami && npm config set access public && yarn lerna publish",
    "sort-package-json": "sort-package-json && yarn lerna exec sort-package-json --stream"
  },
  "prettier": "@willbooster/prettier-config",
  "devDependencies": {
    "dotenv-cli": "3.2.0",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "sort-package-json": "1.44.0"
  }
}
